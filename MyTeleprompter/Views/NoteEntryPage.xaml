<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyTeleprompter.ViewModels"
             x:Class="MyTeleprompter.Views.NoteEntryPage"
             Title="Edit Note">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding DeleteCommand}" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="&#xf1f8;" 
                             FontFamily="FontAwesome" 
                             Color="Red" 
                             Size="24" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto" Padding="15" RowSpacing="15">

        <Entry Grid.Row="0" 
               Placeholder="Script Title" 
               Text="{Binding Note.Title}" 
               FontSize="20"
               FontAttributes="Bold"/>

        <Editor Grid.Row="1" 
                Placeholder="Type your script here..." 
                Text="{Binding Note.Content}" 
                AutoSize="TextChanges"/>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" 
                    Text="Save" 
                    Command="{Binding SaveCommand}"
                    BackgroundColor="Gray"/>

            <Button Grid.Column="1" 
                    Text="Start Camera" 
                    Command="{Binding StartTeleprompterCommand}"
                    BackgroundColor="Red"
                    FontAttributes="Bold"/>
        </Grid>
    </Grid>
</ContentPage>